<h1 class="text-center"><%= pluralize(@posts.count, "Result") %></h1>
<div class="container">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
        <th scope="col"><%= sort_link(@query, :category_name, "Category", default_order: :asc) %></th>
        <th scope="col"><%= sort_link(@query, :user_email, "Email", default_order: :asc) %></th>
        <th scope="col"><%= sort_link(@query, :user_name, "Users", default_order: :asc) %></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></th>
          <td><%= link_to post.category.name, post.category %></th>
          <td><%= link_to post.user.email %></td>
          <td><%= link_to post.user.full_name %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>