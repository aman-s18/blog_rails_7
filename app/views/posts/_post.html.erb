<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Views:</strong>
    <%= pluralize(post.views, 'view') %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>
  <p>
    <strong>Author:</strong>
    <%= post.user&.full_name %>
  </p>

</div>
