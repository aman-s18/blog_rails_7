<div id="<%= dom_id post %>">
  <div class="card mb-2">
    <div class="card-body">
      <p>
        <strong>Title:</strong>
        <%= post.title %>
      </p>
      <p>
        <strong>Views:</strong>
        <%= pluralize(post.views, 'view') %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= post.description %>
      </p>
      <p>
        <strong>Author:</strong>
        <%= post.user&.full_name %>
      </p>
    </div>
</div>
</div>
