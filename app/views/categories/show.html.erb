<div class="container mt-4">
  <div class="btn-group mb-2">
    <% if current_user.admin? %>
      <%= link_to "Back to categories", categories_path, class: "btn btn-primary me-2" %>
      <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-warning me-2" %>
      <%= button_to "Destroy this category", @category, method: :delete, class: "btn btn-danger" %>
    <%end%>
  </div>
  <%= render @category %>
</div>
