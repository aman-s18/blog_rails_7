<div class="container">
  <h1 class="text-center mt-4">Administrator</h1>
  <%= render 'admin/nav_links' %>
  <%= render 'admin/total_daily_views' %>
  <table class="table table-dark table-striped mt-4">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Post</th>
        <th scope="col">Author</th>
        <th scope="col">Comments</th>
      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <th><%= post.id %></th>
        <td><%= link_to post.title.truncate(15), admin_post_path(post) %></td>
        <td><%= post.user.full_name %></td>
        <td><%= pluralize(post.comments.size, "Comment") %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>